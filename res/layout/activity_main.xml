<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Spinner
        android:id="@+id/busStopSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/addToFavoritesButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
		android:layout_toLeftOf="@+id/actionSelectedButton"
        android:drawableLeft="@drawable/ic_action_star"
 		android:gravity="left|center_vertical"
 		android:onClick="onAddToFavoritesButtonClicked" />

    <Button
        android:id="@+id/actionSelectedButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_action_done"
 		android:gravity="left|center_vertical"
 		android:onClick="onActionSelectedButtonClicked"/>

    <ListView
        android:id="@+id/favoritesListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/busStopSpinner"
        android:layout_below="@+id/busStopSpinner"
        android:layout_marginTop="10dp" >
    </ListView>

</RelativeLayout>